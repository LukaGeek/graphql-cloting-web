generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String? @unique
  image1      String
  image2      String
  image3      String
  image4      String
  price       String
  type        String
  brand       String
  description String
  details     String
}